---
const now = new Date();
const hour = now.getHours();
const isOpen = hour >= 8 && hour < 18;
const currentTime = now.toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' });
---

<header 
  class="relative overflow-hidden bg-gradient-to-r from-white/95 via-orange-50/95 to-red-50/95 backdrop-blur-sm border-b border-orange-200/50 shadow-lg"
  x-data="{ mobileMenuOpen: false }"
>
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-2 left-10 w-8 h-8 bg-green-500 rounded-full"></div>
    <div class="absolute top-6 right-16 w-4 h-4 bg-red-500 rounded-full"></div>
    <div class="absolute bottom-3 left-1/3 w-6 h-6 bg-orange-500 rounded-full"></div>
  </div>
  
  <div class="relative w-full max-w-[1440px] mx-auto px-4">
    
    <!-- Header compacto para móvil -->
    <div class="lg:hidden flex items-center justify-between py-3">
      <!-- Logo compacto -->
      <div class="flex items-center gap-2">
        <div class="w-6 h-6 bg-gradient-to-r from-green-600 via-white to-red-600 rounded-full flex items-center justify-center shadow-md">
          <span class="text-xs">🍝</span>
        </div>
        <h1 class="text-xl font-bold text-gray-800">
          D'<span class="bg-gradient-to-r from-green-600 to-red-600 text-transparent bg-clip-text">Rossi</span>
        </h1>
      </div>
      
      <!-- Estado compacto y botón menú -->
      <div class="flex items-center gap-3">
        <!-- Estado compacto -->
        <div class={`flex items-center gap-1 px-2 py-1 rounded-full text-xs font-medium ${
          isOpen 
            ? 'bg-green-100 text-green-800' 
            : 'bg-red-100 text-red-800'
        }`}>
          <div class={`w-2 h-2 rounded-full ${
            isOpen ? 'bg-green-500' : 'bg-red-500'
          }`}></div>
          <span>{isOpen ? 'Abierto' : 'Cerrado'}</span>
        </div>
        
        <!-- Botón menú hamburguesa -->
        <button 
          @click="mobileMenuOpen = !mobileMenuOpen"
          class="p-2 rounded-lg bg-white/80 shadow-md transition-all duration-200 hover:bg-white"
          :class="{ 'bg-primary text-white': mobileMenuOpen }"
        >
          <svg class="w-5 h-5 transition-transform duration-200" :class="{ 'rotate-90': mobileMenuOpen }" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Menú desplegable móvil -->
    <div 
      x-show="mobileMenuOpen" 
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 -translate-y-2"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-2"
      class="lg:hidden border-t border-orange-200/50 py-4 space-y-4"
    >
      <!-- Tagline -->
      <div class="text-center">
        <div class="bg-gradient-to-r from-green-100 to-red-100 rounded-full px-4 py-2 shadow-md inline-block">
          <span class="text-green-800 font-semibold text-sm">
            ✨ ¡Auténtico sabor italiano! ✨
          </span>
        </div>
      </div>
      
      <!-- Especialidades -->
      <div class="flex justify-center">
        <div class="flex items-center gap-3 text-xs text-gray-600">
          <span class="flex items-center gap-1">🍕 Pizzas</span>
          <span class="w-1 h-1 bg-gray-400 rounded-full"></span>
          <span class="flex items-center gap-1">🍝 Pastas</span>
          <span class="w-1 h-1 bg-gray-400 rounded-full"></span>
          <span class="flex items-center gap-1">🍷 Vinos</span>
        </div>
      </div>
      
      <!-- Información de contacto -->
      <div class="text-center space-y-2 text-sm text-gray-600">
        <p class="font-medium">📞 +1 (555) 123-4567</p>
        <p class="font-medium">🕒 Horarios: 8:00 AM - 6:00 PM</p>
        <p class="text-gray-500 text-xs">Hora actual: {currentTime}</p>
      </div>
    </div>

    <!-- Header completo para desktop -->
    <div class="hidden lg:flex flex-col justify-between items-center gap-4 py-4">
      
      <!-- Logo y marca -->
      <div class="flex flex-col items-center">
        <div class="flex items-center gap-2 mb-1">
          <!-- Icono italiano -->
          <div class="w-8 h-8 bg-gradient-to-r from-green-600 via-white to-red-600 rounded-full flex items-center justify-center shadow-md">
            <span class="text-xs font-bold text-gray-800">🍝</span>
          </div>
          <h1 class="text-4xl font-bold text-gray-800">
            D'<span class="bg-gradient-to-r from-green-600 to-red-600 text-transparent bg-clip-text px-1">Rossi</span>
          </h1>
        </div>
        <p class="text-sm text-gray-600 font-medium italic">Auténtica Cocina Italiana</p>
      </div>

      <!-- Información central -->
      <div class="flex flex-col items-center gap-3">
        <!-- Tagline principal -->
        <div class="bg-gradient-to-r from-green-100 to-red-100 rounded-full px-6 py-2 shadow-md">
          <span class="text-green-800 font-semibold text-base">
            ✨ ¡Disfruta el auténtico sabor italiano! ✨
          </span>
        </div>
        
        <!-- Especialidades -->
        <div class="flex items-center gap-4 text-xs text-gray-600">
          <span class="flex items-center gap-1">
            🍕 <span>Pizzas Artesanales</span>
          </span>
          <span class="w-1 h-1 bg-gray-400 rounded-full"></span>
          <span class="flex items-center gap-1">
            🍝 <span>Pastas Frescas</span>
          </span>
          <span class="w-1 h-1 bg-gray-400 rounded-full"></span>
          <span class="flex items-center gap-1">
            🍷 <span>Vinos Selectos</span>
          </span>
        </div>
      </div>

      <!-- Estado y contacto -->
      <div class="flex items-center gap-8">
        <!-- Estado del restaurante -->
        <div class={`flex items-center gap-2 px-4 py-2 rounded-full shadow-md transition-all duration-300 ${
          isOpen 
            ? 'bg-green-100 text-green-800 border border-green-200' 
            : 'bg-red-100 text-red-800 border border-red-200'
        }`}>
          <div class={`w-3 h-3 rounded-full animate-pulse ${
            isOpen ? 'bg-green-500' : 'bg-red-500'
          }`}></div>
          <span class="font-semibold text-sm">
            {isOpen ? '🟢 ABIERTO' : '🔴 CERRADO'}
          </span>
        </div>
        
        <!-- Horarios y contacto -->
        <div class="text-right text-xs text-gray-600">
          <p class="font-medium">Horarios: 8:00 AM - 6:00 PM</p>
          <p class="flex items-center justify-end gap-1 mt-1">
            📞 <span class="font-medium">+1 (555) 123-4567</span>
          </p>
          <p class="text-gray-500 mt-1">Hora actual: {currentTime}</p>
        </div>
      </div>
    </div>
  </div>
</header>
