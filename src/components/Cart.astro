---
// Cart.astro - Componente del carrito de compras
import { restaurantConfig } from '../config/restaurant';
---

<div id="cart-container">
  <!-- Botón flotante del carrito -->
  <button
    id="cart-toggle"
    class="fixed bottom-20 right-4 z-40 bg-primary text-white rounded-full shadow-lg p-4 transition-all duration-300 hover:bg-primary/90 hover:scale-110"
    aria-label="Abrir carrito"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.5 6M7 13l-1.5 6m0 0h9M17 21a2 2 0 100-4 2 2 0 000 4zm-8 0a2 2 0 100-4 2 2 0 000 4z"/>
    </svg>
    <span id="cart-badge" class="absolute -top-2 -right-2 bg-secondary text-white text-xs rounded-full h-6 w-6 font-bold hidden">0</span>
  </button>

  <!-- Modal del carrito -->
  <div
    id="cart-modal"
    class="fixed inset-0 z-50 hidden bg-black/50 backdrop-blur-sm"
  >
    <div class="flex items-end justify-center min-h-screen px-4 pb-4 sm:items-center sm:p-0">
      <div class="bg-white rounded-t-3xl sm:rounded-3xl shadow-xl w-full max-w-md max-h-[80vh] flex flex-col">
        <!-- Header del carrito -->
        <div class="flex items-center justify-between p-4 border-b">
          <h2 class="text-xl font-bold text-gray-800">Mi Pedido</h2>
          <button
            id="cart-close"
            class="text-gray-500 hover:text-gray-700 p-2"
            aria-label="Cerrar carrito"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <!-- Contenido del carrito -->
        <div class="flex-1 overflow-y-auto p-4">
          <div id="cart-items" class="space-y-4">
            <!-- Los items se cargarán dinámicamente -->
          </div>
          
          <!-- Mensaje cuando el carrito está vacío -->
          <div id="empty-cart" class="text-center py-8 text-gray-500">
            <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.5 6M7 13l-1.5 6m0 0h9"/>
            </svg>
            <p class="text-lg font-medium">{restaurantConfig.messages.cartEmpty}</p>
            <p class="text-sm">{restaurantConfig.messages.cartEmptySubtext}</p>
          </div>
        </div>

        <!-- Footer con total y botón de WhatsApp -->
        <div id="cart-footer" class="border-t p-4 space-y-4 hidden">
          <div class="flex justify-between items-center text-lg font-bold">
            <span>Total:</span>
            <span id="cart-total" class="text-primary">$0.00</span>
          </div>
          
          <button
            id="whatsapp-order"
            class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded-xl transition-colors duration-200 flex items-center justify-center gap-2"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
            Pedir por WhatsApp
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script define:vars={{ restaurantConfig }}>
  // Script para manejar el carrito (se ejecuta en el cliente)
  class CartManager {
    constructor() {
      this.items = JSON.parse(localStorage.getItem('cart-storage') || '{"state":{"items":[],"isOpen":false},"version":0}').state.items || [];
      this.init();
    }

    init() {
      this.updateCartDisplay();
      this.bindEvents();
    }

    bindEvents() {
      // Toggle del carrito
      document.getElementById('cart-toggle')?.addEventListener('click', () => {
        this.toggleCart();
      });

      // Cerrar carrito
      document.getElementById('cart-close')?.addEventListener('click', () => {
        this.closeCart();
      });

      // Cerrar carrito al hacer click fuera
      document.getElementById('cart-modal')?.addEventListener('click', (e) => {
        if (e.target === e.currentTarget) {
          this.closeCart();
        }
      });

      // Botón de WhatsApp
      document.getElementById('whatsapp-order')?.addEventListener('click', () => {
        this.sendWhatsAppOrder();
      });
    }

    addItem(product) {
      const existingItem = this.items.find(item => item.name === product.name);
      
      if (existingItem) {
        existingItem.quantity += 1;
      } else {
        this.items.push({
          ...product,
          quantity: 1,
          id: `${product.name}-${Date.now()}`
        });
      }
      
      this.saveToStorage();
      this.updateCartDisplay();
      this.showAddedToCartMessage(product.name);
    }

    removeItem(id) {
      this.items = this.items.filter(item => item.id !== id);
      this.saveToStorage();
      this.updateCartDisplay();
    }

    updateQuantity(id, quantity) {
      if (quantity <= 0) {
        this.removeItem(id);
        return;
      }
      
      const item = this.items.find(item => item.id === id);
      if (item) {
        item.quantity = quantity;
        this.saveToStorage();
        this.updateCartDisplay();
      }
    }

    clearCart() {
      this.items = [];
      this.saveToStorage();
      this.updateCartDisplay();
    }

    toggleCart() {
      const modal = document.getElementById('cart-modal');
      modal?.classList.toggle('hidden');
    }

    closeCart() {
      const modal = document.getElementById('cart-modal');
      modal?.classList.add('hidden');
    }

    getTotalItems() {
      return this.items.reduce((total, item) => total + item.quantity, 0);
    }

    getTotalPrice() {
      return this.items.reduce((total, item) => total + (item.price * item.quantity), 0);
    }

    updateCartDisplay() {
      const badge = document.getElementById('cart-badge');
      const itemsContainer = document.getElementById('cart-items');
      const emptyCart = document.getElementById('empty-cart');
      const footer = document.getElementById('cart-footer');
      const total = document.getElementById('cart-total');

      const totalItems = this.getTotalItems();
      const totalPrice = this.getTotalPrice();

      // Actualizar badge
      if (badge) {
        if (totalItems > 0) {
          badge.textContent = totalItems.toString();
          badge.classList.remove('hidden');
          badge.style.display = 'flex';
          badge.style.alignItems = 'center';
          badge.style.justifyContent = 'center';
        } else {
          badge.classList.add('hidden');
          badge.style.display = 'none';
        }
      }

      // Actualizar contenido del carrito
      if (itemsContainer && emptyCart && footer && total) {
        if (this.items.length === 0) {
          itemsContainer.innerHTML = '';
          emptyCart.classList.remove('hidden');
          footer.classList.add('hidden');
        } else {
          emptyCart.classList.add('hidden');
          footer.classList.remove('hidden');
          total.textContent = `$${totalPrice.toFixed(2)}`;
          
          itemsContainer.innerHTML = this.items.map(item => `
            <div class="flex items-center gap-3 bg-gray-50 rounded-lg p-3">
              <img src="${typeof item.image === 'object' && item.image.src ? item.image.src : item.image}" alt="${item.name}" class="w-12 h-12 object-cover rounded-lg" onerror="this.src='data:image/svg+xml;base64,'">
              <div class="flex-1">
                <h3 class="font-medium text-sm">${item.name}</h3>
                <p class="text-primary font-bold">$${item.price.toFixed(2)}</p>
              </div>
              <div class="flex items-center gap-2">
                <button onclick="cartManager.updateQuantity('${item.id}', ${item.quantity - 1})" class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center text-gray-600 hover:bg-gray-300">-</button>
                <span class="w-8 text-center font-medium">${item.quantity}</span>
                <button onclick="cartManager.updateQuantity('${item.id}', ${item.quantity + 1})" class="w-8 h-8 rounded-full bg-primary text-white flex items-center justify-center hover:bg-primary/90">+</button>
              </div>
              <button onclick="cartManager.removeItem('${item.id}')" class="text-red-500 hover:text-red-700 p-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              </button>
            </div>
          `).join('');
        }
      }
    }

    saveToStorage() {
      const cartData = {
        state: { items: this.items, isOpen: false },
        version: 0
      };
      localStorage.setItem('cart-storage', JSON.stringify(cartData));
    }

    showAddedToCartMessage(productName) {
      // Crear notificación temporal
      const notification = document.createElement('div');
      notification.className = 'fixed top-4 right-4 z-50 bg-green-500 text-white px-4 py-2 rounded-lg shadow-lg transform translate-x-full transition-transform duration-300';
      notification.textContent = `${productName} ${restaurantConfig.messages.addedToCart}`;
      
      document.body.appendChild(notification);
      
      // Mostrar notificación
      setTimeout(() => {
        notification.classList.remove('translate-x-full');
      }, 100);
      
      // Ocultar y remover notificación
      setTimeout(() => {
        notification.classList.add('translate-x-full');
        setTimeout(() => {
          if (notification.parentNode) {
            document.body.removeChild(notification);
          }
        }, 300);
      }, 2000);
    }

    sendWhatsAppOrder() {
      if (this.items.length === 0) return;
      
      const restaurantPhone = restaurantConfig.whatsappNumber;
      let message = `${restaurantConfig.messages.whatsappGreeting}\n\n`;
      
      this.items.forEach(item => {
        message += `• ${item.name} x${item.quantity} - $${(item.price * item.quantity).toFixed(2)}\n`;
      });
      
      message += `\n*Total: $${this.getTotalPrice().toFixed(2)}*\n\n`;
      message += restaurantConfig.messages.whatsappClosing;
      
      const whatsappUrl = `https://wa.me/${restaurantPhone}?text=${encodeURIComponent(message)}`;
      window.open(whatsappUrl, '_blank');
    }
  }

  // Inicializar el carrito cuando se carga la página
  let cartManager;
  document.addEventListener('DOMContentLoaded', () => {
    cartManager = new CartManager();
    
    // Hacer el cartManager disponible globalmente
    window.cartManager = cartManager;
  });
</script>
